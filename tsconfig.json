{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["jest"],
    "declaration": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/client/notifications.test.ts", "test/server/app.test.ts", "test/createDb.test.ts", "test/crypto.test.ts", "node_modules/sodium-universal/sodium-universal.d.ts"
  ]
}
