{
  "name": "@consento/crypto",
  "version": "0.0.4",
  "description": "Crypto functionality used in Consento",
  "main": "index.js",
  "scripts": {
    "ci": "npm run lint && npm run test",
    "test": "jest",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "pack": "rm -rf ./dist && npm run build-ts && cp package.json dist && cp Readme.md dist && cp -r src dist && cd dist && find . -type d | grep __tests__ | xargs rm -r && rexreplace '\"\\.\\./src' '\"./src' *.js.map --verbose && rexreplace '\"\\.\\.\\/\\.\\./src' '\"../src' */**/*.js.map --verbose",
    "release": "npm run ci && npm run pack && cd dist && npm publish --access=public",
    "lint": "eslint --ext .js,.ts ."
  },
  "keywords": [],
  "author": "Martin Heidegger <martin.heidegger@gmail.com>",
  "license": "MIT",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "node_modules/*",
    "dist/*",
    "coverage/*",
    "**/*.d.ts",
    "/src/public/",
    "/src/types/"
  ],
  "dependencies": {
    "@consento/libsodium-wrappers-sumo": "^0.7.7",
    "buffer": "^5.4.3",
    "sodium-universal": "^2.0.0"
  },
  "devDependencies": {
    "@consento/sync-randombytes": "^1.0.2",
    "@types/jest": "^24.0.18",
    "@types/libsodium-wrappers-sumo": "^0.7.1",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "eslint": "^6.5.1",
    "eslint-config-standard-with-typescript": "^10.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "rexreplace": "^4.1.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/consento-org/crypto.git"
  },
  "bugs": {
    "url": "https://github.com/consento-org/crypto/issues"
  },
  "homepage": "https://github.com/consento-org/crypto#readme"
}
